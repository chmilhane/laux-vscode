{
	"comments": {
		"lineComment": "--",
		"blockComment": [ "--[[", "]]" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
		["`", "`"],
		// ["do", "\n\t\nend"],
		{ "open": "/*", "close": "\n\n*/", "notIn": ["string", "comment"] },
		{ "open": "--[[", "close": "\n\n]]", "notIn": ["string", "comment"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"indentationRules": {
		"increaseIndentPattern": "^((?!(\\-\\-)).)*((\\b(else|function|then|do|repeat|class|public|private)\\b((?!\\b(end|until)\\b).)*)|(\\{\\s*))$",
		"decreaseIndentPattern": "^\\s*((\\b(elseif|else|end|until)\\b)|(\\})|(\\)))"
	}
}
